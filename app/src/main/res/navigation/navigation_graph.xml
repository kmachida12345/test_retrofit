<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="jp.abetakuto.test_retrofit.view.channellist.MainFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_firstFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@+id/firstFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="jp.abetakuto.test_retrofit.view.auth.AuthFragment"
        android:label="AuthFragment">
        <action
            android:id="@+id/action_authFragment_to_firstFragment"
            app:destination="@id/firstFragment"
            app:popUpTo="@+id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>